<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="sispoker">
	
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!--  <jta-data-source>java:/sispokerDS</jta-data-source> -->
		<jta-data-source>java:jboss/datasources/PostgreSQLDS</jta-data-source>
		

		<!-- Entidades Gerais -->
		<class>br.gms.sispoker.wssispoker.entity.Jogador</class>
		<class>br.gms.sispoker.wssispoker.entity.Entrada</class>
		<class>br.gms.sispoker.wssispoker.entity.Saida</class>
	
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="validade" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<!-- Bugs no Postgres 9.1 e 9.3; Serve para enxergar 'schema.squence'  -->
			<property name="hibernate.id.new_generator_mappings" value="true"/>
			<property name="hibernate.jdbc.batch_size" value="10"/>
			<property name="hibernate.cache.use_second_level_cache" value="false"/>
			<property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.JBossTransactionManagerLookup"/>  
		</properties>
	</persistence-unit>
</persistence>